{
  "name": "buluma",
  "version": "1.8.0",
  "repository": "https://github.com/buluma/buluma.git",
  "author": "Michael Buluma <bulumaknight@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "release": "npx standard-version",
    "commit": "git add . && npx git-cz --disable-emoji",
    "test": "jest"
  },
  "jest": {
    "forceExit": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "text-summary",
      "json-summary"
    ],
    "setupFilesAfterEnv": [
      "./test/setupTests.ts"
    ],
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.dev.json"
      }
    }
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "dayjs": "^1.11.19",
    "js-yaml": "^4.1.1",
    "purgecss": "^8.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-vis": "^1.12.1",
    "tailwindcss": "^4.2.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/chart.js": "^4.0.1",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/react-vis": "^1.11.15",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-image-snapshot": "^6.5.1",
    "jsdom-screenshot": "^4.0.0",
    "react-test-renderer": "^19.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "send": "^0.19.0",
    "serve-static": "^1.16.0"
  }
}
